{
  "version": 2,
  "outputDirectory": "dist/spa",
  "buildCommand": "npm run build",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/serverless" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/serverless.js": {
      "runtime": "nodejs18.x"
    }
  }
}
